!!! 5
%html{lang: 'en'}
  %head
    %meta{charset: 'utf-8'}
    %title Qunit Template
    %link{rel: 'stylesheet', href: 'css/normalize.css'}
    %link{rel: 'stylesheet', href: 'css/style.css'}
  %body
    %header
      %h1 The Geek Bank
      %img#logo
      %input#img_address{type: 'text', placeholder: 'Add Image URL Here'}
      %input#set_image{type: 'button', value: 'Click to add image'}
      .clear

      #balance_container
        #balance
        %input#balance_entry{type: 'text', placeholder: 'Enter Balance'}
        %input#set_balance{type: 'button', value: 'Set Balance'}
      .clear

      #deposit_container
        %input#deposit_amount{type: 'text', placeholder:'Enter Dep or With Amount'}
        %input#deposit{type: 'button', value: 'Deposit'}
        %input#withdrawal{type: 'button', value: 'Withdrawal'}
      .clear
      %h1 Transaction List
    section
    %script{src:'js/jquery-1.10.2.min.js'}
    %script{src:'js/underscore-min.js'}
    %script{src:'js/main.js'}

